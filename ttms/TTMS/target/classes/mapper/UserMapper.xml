<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gh.ttms.dao.UserMapper">

  <insert id="addUser" parameterType="gh.ttms.pojo.User" >
    insert into user_info (id,username,password,mailbox) values (0,#{username},#{password},#{mailbox})
  </insert>
  <delete id="deleteUserByID" parameterType="int" >
    delete from user_info where id=#{id};
  </delete>
  <delete id="deleteUserByName" parameterType="String">
    delete from user_info where username=#{username};
  </delete>
  <select id="getUserByID" parameterType="int" resultType="user">
    select username,password,mailbox from user_info where id=#{id};
  </select>
  <select id="getUserByName" parameterType="String" resultType="user">
    select username,password,mailbox from user_info where username=#{username};
  </select>
  <update id="updateUser" parameterType="user">
    update user_info set username=#{username},password=#{password},mailbox=#{mailbox} from user_info where id=#{id};
  </update>
</mapper>